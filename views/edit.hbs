<form class="bg-light text-center col-md-8" action="/edit/{{toys._id}}" method="post">
   <form>
      <div class="modal-header">
         <h4 class="modal-title">Edit Product</h4>
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Name</label>
         <input class="form-control" type="text" name="name" value="{{ toys.name }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Brand</label>
         <input class="form-control" type="text" name="brand" value="{{ toys.brand }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Price</label>
         <input class="form-control" type="text" name="price" value="{{ toys.price }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Detail</label>
         <input class="form-control" type="text" name="detail" value="{{ toys.detail }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Quantity</label>
         <input class="form-control" type="number" name="quantity" value="{{ toys.quantity }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Image</label><br>
         <img src="{{ toys.image}}" width="100" height="100"><br>
         <input class="form-control" type="text" name="image" value="{{ toys.image }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Video</label><br>
         <iframe src="https://www.youtube.com/embed/{{ toys.video }}" width="200" height="150"></iframe>
         <input class="form-control" type="text" name="video" value="{{ toys.video }}" required>
      </div>
      <div class="modal-footer">
         <input type="submit" class="btn btn-info" value="Save">
      </div>
   </form>
</form>